<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<h1>Publicar Producto</h1>

			<%= form_for @product  do |f| %>
				<div class="form-group">
					<%= f.label :name %>
					<%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre" %>
				</div>
				<div class="form-group">
					<%= f.label :url %>
					<%= f.url_field :url, class: "form-control input-lg", placeholder: "Ingresa la URL"%>
				</div>
				<div class="form-group">
					<%= f.label :description%>
					<%= f.text_area :description, class: "form-control input-lg", placeholder: "Ingresa la descripcion"%>
				</div>
				<div>
					<%= f.submit class: "btn btn-primary btn-lg btn-block"%>
				</div>
			<%end%>
		</div>
	</div>
</div>
